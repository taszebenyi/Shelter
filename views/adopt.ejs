<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Adopt <%= animal.name %></div>
    <form class="ui form" action="/posts/<%= animal._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Species</label>
            <input type="text" name="animal[species]" value="<%= animal.species %>">
        </div>
        <div class="field">
            <label>Name</label>
            <input type="text" name="animal[name]" value="<%= animal.name %>">
        </div>
        <div class="field">
            <label>Color</label>
            <input type="text" name="animal[color]" value="<%= animal.color %>">
        </div>
        <div class="field">
            <label>Comment</label>
            <input type="text" name="animal[comment]" value="<%= animal.comment %>">
        </div>
        <div class="field">
            <label>Chip ID</label>
            <input type="text" name="animal[chipID]" value="<%= animal.chipID %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="animal[image]" value="<%= animal.image %>">
        </div>
        <input class="ui green big button" type="submit">
    </form>
</div>

<% include ./partials/footer %>
